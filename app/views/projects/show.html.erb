<div class="contents row">
    <div class="content_post">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
            <% if company_signed_in? && current_company.id == @project.company.id %>
            <li>
                <%= link_to '編集', "/projects/#{@project.id}/edit", method: :get %>
            </li>
            <li>
                <%= link_to '削除', "/projects/#{@project.id}", method: :delete %>
            </li>
            <% end %>
        </ul>
      </div>
      <%= simple_format(@project.title) %>
        <span class="name">
          <a href="">
            <span>company</span><%= @project.company.name %>
          </a>
        </span>
    </div>
    <div class="container">
      <div class="contents">
       <% @concepts.each do |concept| %>
        <%= render partial: "concept", locals: { concept: concept } %>
         <% end %>
         <%= paginate(@concepts) %>
      </div>
       <% if current_user %>
        <%= form_tag("/projects/#{@project.id}/concepts", method: :post) do %>
          <input placeholder="title" type="string" name="title">
          <input placeholder="Image Url" type="text" name="image">
          <textarea cols="30" name="detail" placeholder="text" rows="10"></textarea>
          <input type="submit" value="SENT">
        <% end %>
       <% end %>
    </div>
</div>