<div class="contents row">
    <div class="content_post">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
            <% if company_signed_in? && current_company.id == @project.company.id %>
            <li>
                <%= link_to '編集', "/projects/#{@project.id}/edit", method: :get %>
            </li>
            <li>
                <%= link_to '削除', "/projects/#{@project.id}", method: :delete %>
            </li>
            <% end %>
        </ul>
      </div>
      <%= simple_format(@project.title) %>
        <span class="name">
          <a href="">
            <span>company</span><%= @project.company.name %>
          </a>
        </span>
    </div>
</div>