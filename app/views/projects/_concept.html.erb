<div class="concept_post" style="background-image: url(<%= concept.image %>);">
  <div class="more">
    <span><%= image_tag 'arrow_top.png' %></span>
    <ul class="more_list">
      <li>
        <%= link_to "detail",  "/projects/#{concept.project.id}/concepts/#{concept.id}", method: :get %>
      </li>
        <% if user_signed_in? && current_user.id == concept.user.id %>
        <li>
            <%= link_to 'edit', "/projects/#{concept.project.id}/concepts/#{concept.id}/edit", method: :get %>
        </li>
        <li>
            <%= link_to 'delete', "/projects/#{concept.project.id}/concepts/#{concept.id}", method: :delete %>
        </li>
        <% end %>
    </ul>
  </div>
  <!-- <%= simple_format(concept.title) %> -->
    <span class="name">
      <a href="">
        <span>user</span><%= concept.user.name %>
      </a>
    </span>
    <div class ="concept_rating-star">
      <% if concept.reviews.present? %>
        <span class="rating-star">
          <i class="star-actived rate-<%= concept.reviews.average(:rate).round %>0"></i>
        </span>
      <% else%>
        <span class="rating-star">
          <i class="star-actived rate-0"></i>
        </span>
      <% end %>
    </div>
</div>