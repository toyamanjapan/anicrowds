<div class="content_post clearfix" style="background-image: url(https://media.giphy.com/media/3oEdvagnVMWBVmi1cA/giphy.gif">
  <div class="more">
    <span><%= image_tag 'arrow_top.png' %></span>
    <ul class="more_list">
      <li>
        <%= link_to "detail", project_path(project.id), method: :get %>
      </li>
        <% if company_signed_in? && current_company.id == project.company.id %>
        <li>
            <%= link_to 'edit', "/projects/#{project.id}/edit", method: :get %>
        </li>
        <li>
            <%= link_to 'delete', "/projects/#{project.id}", method: :delete %>
        </li>
        <% end %>
    </ul>
  </div>
    <ul>
      <li><%= project.title %></li>
      <li><%= project.other %></li>
      <!-- <li>project_detail:<%= project.project_detail %></li> -->
      <!-- <li>industry:<%= project.industry %></li> -->
    </ul>
    <span class="name">
      <a href="">
        <span>company</span><%= project.company.name %>
      </a>
    </span>
</div>
