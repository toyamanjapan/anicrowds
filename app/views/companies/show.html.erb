<div class="contents row" >
  <p><%= @name %>'s projects</p>
  <% @projects.each do |project| %>
    <div class="content_post_left clearfix" style="background-image: url(<%= project.image%>">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
            <% if company_signed_in? && current_company.id == project.company_id %>
            <li>
                <%= link_to 'edit', "/projects/#{project.id}/edit", method: :get %>
            </li>
            <li>
                <%= link_to 'delete', "/projects/#{project.id}", method: :delete %>
            </li>
            <% end %>
        </ul>
      </div>
    </div>
  <div class="content_post_right clearfix">
    <ul>
      <li><%= project.title %></li>
      <li><%= project.project_detail %></li>
      <!-- <li>Industry:<%= project.industry %></li> -->
      <li><%= project.other %></li>
    </ul>
        <span class="name">
          <a href="">
            <span>company</span><%= project.company.name %>
          </a>
        </span>
   </div>
  <% end %>
</div>